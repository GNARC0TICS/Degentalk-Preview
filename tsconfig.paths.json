{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      // Client paths - for React/frontend code
      "@/*": ["client/src/*"],
      "@admin/*": ["client/src/features/admin/*"],
      
      // Server paths - for backend code
      "@core/*": ["server/src/core/*"],
      "@domains/*": ["server/src/domains/*"],
      "@middleware/*": ["server/src/middleware/*"],
      "@utils/*": ["server/src/utils/*"],
      "@lib/*": ["server/lib/*", "server/src/lib/*"],
      
      // Database paths
      "@db": ["db/index.ts"],
      "@db/*": ["db/*"],
      "@schema": ["db/schema/index.ts"],
      "@schema/*": ["db/schema/*"],
      
      // Shared paths - for cross-workspace code
      "@shared/*": ["shared/*"],
      
      // Server source path - only for scripts
      "@server/*": ["server/src/*"]
    }
  }
}