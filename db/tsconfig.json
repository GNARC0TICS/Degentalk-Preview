{
	"extends": ["../tsconfig.base.json", "../tsconfig.paths.json"],
	"compilerOptions": {
		// Project reference settings
		"composite": true,
		"incremental": true,
		"tsBuildInfoFile": "./.tscache/db.tsbuildinfo",
		
		// DB needs to emit declarations
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"outDir": "./dist",
		"rootDir": ".",
		
		// Module settings for database package
		"module": "ESNext",
		"moduleResolution": "bundler",
		
		// Database specific settings
		"strict": true, // Enable strict mode for DB layer
		"types": ["node"]
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.spec.ts",
		".tscache",
		"migrations"
	],
	"references": [
		{ "path": "../shared/tsconfig.json" }
	]
}
