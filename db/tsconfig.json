{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"lib": ["ES2022"],
		"types": ["node"],
		"composite": true,
		"outDir": "./dist",
		"rootDir": "..",
		"baseUrl": ".",
		"paths": {
			"@schema": ["./schema/index.ts"],
			"@schema/*": ["./schema/*"],
			"@shared/*": ["../shared/*"]
		},
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": false,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"tsBuildInfoFile": "./.tscache/.tsbuildinfo",
		"noEmit": true
	},
	"include": [
		"./**/*.ts",
		"../drizzle.config.ts",
		"../shared/**/*.ts"
	],
	"exclude": [
		"node_modules", 
		"dist", 
		"**/*.test.ts", 
		"**/*.spec.ts",
		".tscache"
	]
}