{
	"name": "@degentalk/db",
	"version": "1.0.0",
	"type": "module",
	"main": "./index.ts",
	"types": "./index.d.ts",
	"exports": {
		".": {
			"types": "./index.d.ts",
			"default": "./index.ts"
		},
		"./schema": "./schema/index.ts",
		"./schema/*": "./schema/*.ts",
		"./types": "./types/index.ts",
		"./types/*": "./types/*.ts"
	},
	"scripts": {
		"generate": "drizzle-kit generate --config ./drizzle.config.ts",
		"migrate": "drizzle-kit generate --config ./drizzle.config.ts",
		"migrate:apply": "tsx ../scripts/run-migrations.ts",
		"push": "drizzle-kit push --config ./drizzle.config.ts",
		"push:force": "drizzle-kit push --config ./drizzle.config.ts --force",
		"drop": "drizzle-kit drop --config ./drizzle.config.ts",
		"studio": "drizzle-kit studio --config ./drizzle.config.ts",
		"introspect": "drizzle-kit introspect --config ./drizzle.config.ts"
	},
	"dependencies": {
		"@degentalk/shared": "workspace:*",
		"@neondatabase/serverless": "^0.10.4",
		"drizzle-orm": "0.44.2",
		"drizzle-zod": "^0.7.0",
		"pg": "^8.11.0",
		"ws": "^8.16.0",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@types/node": "^20.19.0",
		"@types/pg": "^8.10.0",
		"dotenv-cli": "^8.0.0",
		"drizzle-kit": "0.31.4"
	}
}
