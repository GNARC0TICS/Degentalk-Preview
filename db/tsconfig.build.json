{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"tsBuildInfoFile": "./dist/.tsbuildinfo",
		"noEmit": false,
		"skipLibCheck": true,
		"strict": false,
		"module": "ES2022",
		"moduleResolution": "bundler"
	},
	"include": [
		"index.ts",
		"schema/**/*.ts",
		"types/**/*.ts",
		"enums/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.spec.ts",
		"migrations/**/*",
		"../shared/**/*"
	]
}