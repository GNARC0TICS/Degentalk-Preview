{
	"include": [
		"client/src/**/*",
		"server/**/*",
		"shared/**/*",
		"scripts/migration/identify-numeric-ids.ts",
		"scripts/migration/check-ids-ci.ts",
		"db/**/*",
		"client/**/*.test.ts",
		"client/**/*.test.tsx",
		"client/**/*.spec.ts",
		"client/**/*.spec.tsx",
		"client/vitest.config.ts"
	],
	"exclude": [
		"node_modules",
		"build",
		"dist",
		"**/__tests__",
		"scripts/templates/**",
		"scripts/auth/auth-refactor.ts",
		"scripts/codemods/**",
		"scripts/wallet/**",
		"scripts/validate-*.ts",
		"scripts/ops/validate-safe-migrations.ts",
		"scripts/testing/validate-forum-fks.ts",
		"scripts/migration/cleanup-old-category-schema.ts",
		"scripts/migration/generate-id-aliases.ts",
		"scripts/migration/generate-uuid-audit.ts",
		"archive/seed-corrupted/**",
		"shared/fixtures/**",
		"server/test/**",
		"server/tests/**",
		"server/**/*.test.ts",
		"server/**/*.spec.ts",
		"server/utils/**"
	],
	"compilerOptions": {
		"incremental": true,
		"tsBuildInfoFile": "./.tscache/.tsbuildinfo",
		"noEmit": true,
		"module": "ESNext",
		"target": "ES2022",
		"lib": ["esnext", "dom", "dom.iterable"],
		"jsx": "react-jsx",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,
		"forceConsistentCasingInFileNames": true,
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"baseUrl": ".",
		"types": ["node"],
		"paths": {
			"@/*": ["client/src/*"],
			"@shared/types": ["shared/types/index.ts"],
			"@shared/*": ["shared/*"],
			"@server/*": ["server/*"],
			"@server-core/*": ["server/src/core/*"],
			"@core/*": ["server/src/core/*"],
			"@server-utils/*": ["server/src/utils/*"],
			"@server-middleware/*": ["server/src/middleware/*"],
			"@db": ["db/index.ts"],
			"@schema": ["db/schema/index.ts"],
			"@schema/*": ["db/schema/*"],
			"@db_types/*": ["db/types/*"],
			"@db/types": ["db/types/index.ts"],
			"@db/types/*": ["db/types/*"],
			"@db/schema/core/enums": ["db/schema/core/enums/index.ts"],
			"@degentalk/db/types": ["db/types/index.ts"],
			"@/types/ids": ["client/src/types/ids.ts"],
			"@lib/*": ["./lib/*"],
			"@forum-sdk/*": ["forum-sdk/*"]
		},
		"isolatedModules": true
	}
}
