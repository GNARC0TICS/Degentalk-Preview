{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"composite": true,
		"outDir": "dist",
		"skipLibCheck": true,
		"rootDir": ".",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@config/*": ["../config/*"],
			"@shared/*": ["../shared/*"],
			"@assets/*": ["../attached_assets/*"],
			"@db": ["../db/index.ts"],
			"@db_types/*": ["../db/types/*"],
			"@schema": ["../db/schema/index.ts"],
			"@schema/*": ["../db/schema/*"]
		},
		"allowImportingTsExtensions": true
	},
	"include": ["src", "../config/uiverse-components.config.ts"],
	"references": [{ "path": "../shared" }]
}
