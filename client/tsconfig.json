{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "dist",
		"skipLibCheck": true,
		"rootDir": ".",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			// NEW paths (target state)
			"@app/*": ["src/*"],
			
			// OLD paths (temporary - for transition)
			"@/*": ["src/*"],
			"@config/*": ["../config/*"],
			"@config/forumMap": ["../shared/config/forum-map.config.ts"],
			"@config/forumEconomy": ["../shared/config/forum-economy.config.ts"],
			"@shared/*": ["../shared/*"],
			"@shared/types/ids": ["../shared/types/ids.ts"],
			"@shared/types/index": ["../shared/types/index.ts"],
			"@shared/types/entities": ["../shared/types/entities/index.ts"],
			"@shared/config/zoneThemes.config": ["../shared/config/zoneThemes.config.ts"],
			"@shared/utils/id": ["../shared/utils/id.ts"],
			"@assets/*": ["../attached_assets/*"],
			"@db": ["../db/index.ts"],
			"@db_types/*": ["../db/types/*"],
			"@schema": ["../db/schema/index.ts"],
			"@schema/*": ["../db/schema/*"]
		},
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"include": ["src", "../config/uiverse-components.config.ts"]
}
