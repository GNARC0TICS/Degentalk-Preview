# Client Environment Variables

# API Configuration
VITE_API_URL=http://localhost:5420

# Development Mode Settings
# Force real authentication in development (disables auto-login)
VITE_FORCE_AUTH=false

# Default role for development auto-login (user, moderator, admin, super_admin)
# Defaults to 'user' if not specified
VITE_DEV_DEFAULT_ROLE=user

# Feature Flags
VITE_ENABLE_WEBSOCKETS=true
VITE_ENABLE_MISSIONS=true
VITE_ENABLE_SHOP=true

# Third-party Services
VITE_SENTRY_DSN=
VITE_ANALYTICS_ID=