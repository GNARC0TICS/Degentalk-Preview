# Client Environment Variables

# API Configuration
VITE_API_URL=http://localhost:5420

# Development Mode Settings
# Force real authentication in development (disables auto-login)
VITE_FORCE_AUTH=false

# Default role for development auto-login (user, moderator, admin, super_admin)
# Defaults to 'user' if not specified
VITE_DEV_DEFAULT_ROLE=user

# Feature Flags
VITE_ENABLE_WEBSOCKETS=true
VITE_ENABLE_MISSIONS=true
VITE_ENABLE_SHOP=true

# Third-party Services
VITE_SENTRY_DSN=

# Analytics Configuration
# Google Analytics 4 - Get your measurement ID from Google Analytics
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Email Collection (Google Forms Integration)
# 1. Create a Google Form with an email field
# 2. Get the form ID from URL: https://docs.google.com/forms/d/e/[FORM_ID]/viewform
# 3. Get field ID by inspecting the email input's name attribute
VITE_GOOGLE_FORM_ID=YOUR_FORM_ID_HERE
VITE_GOOGLE_FORM_EMAIL_FIELD=entry.123456789