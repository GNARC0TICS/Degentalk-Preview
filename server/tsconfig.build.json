{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		// Production build optimizations
		"incremental": false,
		"tsBuildInfoFile": null,
		"removeComments": true,
		"sourceMap": false,
		"declarationMap": false,
		
		// Ensure we emit for production
		"noEmit": false,
		"declaration": true,
		"outDir": "./dist",
		
		// Production doesn't support .ts extensions
		"allowImportingTsExtensions": false
	},
	"references": [
		{ "path": "../shared/tsconfig.build.json" },
		{ "path": "../db/tsconfig.build.json" }
	]
}
