{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "..",
		"paths": {
			"@/*": ["client/src/*"],
			"@shared/*": ["shared/*"],
			"@server/*": ["server/*"],
			"@server/src/*": ["server/src/*"],
			"@server-core/*": ["server/src/core/*"],
			"@server-utils/*": ["server/src/utils/*"],
			"@server-middleware/*": ["server/src/middleware/*"],
			"@db": ["db/index.ts"],
			"@schema": ["db/schema/index.ts"],
			"@schema/*": ["db/schema/*"]
		},
		"skipLibCheck": true,
		"noEmitOnError": false
	},
	"include": ["index.ts", "src/**/*.ts", "src/**/*.tsx"],
	"exclude": [
		"node_modules",
		"dist",
		"test",
		"**/*.test.ts",
		"**/*.spec.ts",
		"**/__mocks__/**",
		"**/storage.ts",
		"**/utils/**",
		"**/scripts/**",
		"**/old/**",
		"scripts",
		"coverage"
	]
}
