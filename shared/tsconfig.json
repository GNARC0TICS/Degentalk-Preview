{
	"extends": ["../tsconfig.base.json", "../tsconfig.paths.json"],
	"compilerOptions": {
		// Project reference settings
		"composite": true,
		"incremental": true,
		"tsBuildInfoFile": "./.tscache/shared.tsbuildinfo",
		
		// Shared needs to emit declarations for other packages
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"outDir": "./dist",
		"rootDir": ".",
		
		// Module settings for shared package
		"module": "ESNext",
		"moduleResolution": "bundler",
		
		// Shared is foundation - no external dependencies
		"types": ["node"]
	},
	"include": [
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.spec.ts",
		".tscache"
	]
}
