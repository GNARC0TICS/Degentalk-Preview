# Environment Configuration Template
# Copy this file to env.local and fill in your actual values
# NEVER commit env.local to version control

# Database Configuration
DATABASE_PROVIDER=postgresql
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Environment Settings
NODE_ENV=development
APP_ENV=development

# Authentication (Development Only)
DEV_FORCE_AUTH=false
DEV_BYPASS_PASSWORD=false

# Session Security
SESSION_SECRET=your-random-session-secret-here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# CCPayment Configuration
CCPAYMENT_APP_ID=your_ccpayment_app_id
CCPAYMENT_APP_SECRET=your_ccpayment_secret

# Frontend Configuration
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_FEATURE_WALLET=true
VITE_FORCE_AUTH=false

# Redis Configuration (Production)
REDIS_URL=redis://localhost:6379

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# Rate Limiting
RATE_LIMIT_REDIS_URL=redis://localhost:6379
RATE_LIMIT_ENABLED=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=100
API_RATE_WINDOW=900000